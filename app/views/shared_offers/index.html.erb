<p id="notice"><%= notice %></p>

<h1>Listing Shared Offers</h1>

<table>
  <thead>
    <tr>
      <th>Offer</th>
      <th>User</th>
      <th>Is accepted</th>
      <th>Datetime accepted</th>
      <th>Is redeemed</th>
      <th>Datetime redeemed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shared_offers.each do |shared_offer| %>
      <tr>
        <td><%= shared_offer.offer %></td>
        <td><%= shared_offer.user %></td>
        <td><%= shared_offer.is_accepted %></td>
        <td><%= shared_offer.datetime_accepted %></td>
        <td><%= shared_offer.is_redeemed %></td>
        <td><%= shared_offer.datetime_redeemed %></td>
        <td><%= link_to 'Show', shared_offer %></td>
        <td><%= link_to 'Edit', edit_shared_offer_path(shared_offer) %></td>
        <td><%= link_to 'Destroy', shared_offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

